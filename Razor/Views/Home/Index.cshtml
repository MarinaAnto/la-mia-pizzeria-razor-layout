<!--5. Stampare in pagina la data e l'ora attuale (usando la classe DateTime) con il formato anno-mese-giorno ore:minuti:secondi
-->
@{
    DateTime dataora =new DateTime();
    int anno= dataora.Year ;
    int mese= dataora.Month ;
    int giorno= dataora.Day ;
    int ore= dataora.Hour ;
    int minuti= dataora.Minute ;
    int secondi= dataora.Second;
}
<p>@anno-@mese-@giorno @ore:@minuti:@secondi</p>
